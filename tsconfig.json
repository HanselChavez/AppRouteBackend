{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["esnext"],
        "target": "es2016",
        "moduleResolution": "nodenext",
        "module": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "typeRoots": ["./src/types","./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
